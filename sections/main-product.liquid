                          when 'collections'
                            render 'collection-block', collection: collections[handle], custom_aspect_ratio: chosen_aspect_ratio_collection
                          when 'articles'
                            render 'article-block-small', article: articles[handle]
                        endcase
                        echo '</div>'
                      endfor
