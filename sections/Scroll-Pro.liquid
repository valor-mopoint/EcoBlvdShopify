<div class="{% if section.settings.use_alt_bg %}use-alt-bg1{% endif %}">
  {% if section.settings.scrollprotitle != blank %}
  <div style="width:30%;float:left;">
  	{{ section.settings.scrollprotitle }}
  </div>
  {% endif %}
</div>

{% schema %}
  {
    "name": "ScrollPro",
	"class": "section-scrollpro",
    "settings": [
	  {
		"type":"text",
		"id":"scrollprotitle",
		"label":"Title",
		"default":"Be Part of the Solution. Not the Pollution."
	  },
	  {
		"type": "range",
        "id": "scrollprotitle_fontsize",
        "min": 12,
        "max": 18,
        "step": 1,
        "unit": "px",
        "label": "Title Font Size",
        "default": 16
	  },
	  {
		"type": "checkbox",
		"id": "use_alt_bg1",
		"label": "Use alternate section color",
		"default": false
	  }
	],
	"blocks":[
	  {
		"type": "image",
        "name": "Slide",
        "settings": [
		  {
			"type": "image_picker",
			"id": "image",
			"label": "Image"
		  }
		]
	  },
	  {
		"type": "button",
		"name": "Button",
		"limit":1,
		"settings":[
		  {
			"type": "text",
			"id": "button",
			"label": "Button Label"
		  },
		  {
			"type": "text",
			"id": "link",
			"label": "Button Link"
		  }
		]
	  }
	],
	"presets":[
	  {
        "name": "ScrollPro",
        "settings": { },
        "blocks": [
          {
            "type": "image"
          },
          {
            "type": "button"
          }
        ]
	  }
	]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

