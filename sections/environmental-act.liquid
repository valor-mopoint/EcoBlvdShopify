<div id="section-id-{{ section.id }}">
{% for block in section.blocks %}
  {% case block.type %}
      
      {% when 'head' %}
        <div class="environmenalHead-{{ block.id }} rte lightly-spaced-row {% if block.settings.enlarge_text %}large-text{% endif %}" {{ block.shopify_attributes }}>{{ block.settings.headtext }}</div>
	 {% when 'text' %}
         <div class="rte lightly-spaced-row {% if block.settings.enlarge_text %}large-text{% endif %}" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
  {% endcase %}
{% endfor %}
</div>

{%- style -%}
	{%- assign blocks = section.blocks | where: "type", "head" -%}
	{%- for block in blocks -%}
		.environmenalHead-{{ block.id }} {
            {%- if block.settings.headfontsize != blank -%}
			font-size: {{ block.settings.headfontsize }}px
			{%- endif -%}

			{%- if block.settings.headfontcolor != blank -%}
			color: {{ block.settings.headfontcolor }}
			{%- endif -%}
        }
	{%- endfor -%}
	

{% endstyle %}

{% schema %}
  {
    "name": "enviromental",
    "settings": [
	  {
        "type": "select",
        "id": "height1",
        "label": "Section height",
        "default": "medium",
        "options": [
          {
            "value": "small",
            "label": "Small"
          },
          {
            "value": "medium",
            "label": "Medium"
          },
          {
            "value": "large",
            "label": "Large"
          }
        ]
      }
	],
	"blocks":[
      {
		"type":"head",
		"name":"head",
		"settings":[
          {
            "type":"text",
            "id":"headtext",
            "label":"Text",
			"default":"Head"
          },
		  {
			"type": "range",
			"id": "headfontsize",
			"label": "Head Font Size",
			"min": 12,
			"max": 24,
			"step": 1,
			"unit": "px",
			"default": 16
		  },
		  {
			"type": "color",
			"id": "headfontcolor",
			"label": "Head Font color"
		  }
		  
		]
      },
	{
        "type": "text",
        "name": "Text",
        "settings": [
          {
            "type": "richtext",
            "id": "text",
            "label": "Text",
            "default": "<p>Use this text to share information about your store with your customers. Describe products, share announcements, or welcome customers to your store.</p>"
          },
          {
            "type": "checkbox",
            "id": "enlarge_text",
            "label": "Enlarge text",
            "default": true
          }
        ]
      }
	],
    "presets": [
      {
        "name": "enviromental",
        "settings": {},
        "blocks": [
          {
            "type": "head"
          },
		  {
		     "type":"text"
		  }
        ]
      }
    ]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

