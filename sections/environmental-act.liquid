<div id="section-id-{{ section.id }}">
{% for block in section.blocks %}
  {% case block.type %}
      
      {% when 'head' %}
        <div class="environmenalHead-{{ block.id }} rte lightly-spaced-row {% if block.settings.enlarge_text %}large-text{% endif %}" {{ block.shopify_attributes }}>{{ block.settings.headtext }}</div>
	 {% when 'text' %}
           <div class="rte lightly-spaced-row {% if block.settings.enlarge_text %}large-text{% endif %}" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
   	 {% when 'image'%}
          {%- if block.settings.image == blank -%}
              <div class="gallery__image placeholder-image {% if show_overlay_text %}dark{% endif %}">
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {%- else -%}
              <div class="gallery__image rimage-outer-wrapper rimage-background lazyload{% if section.settings.enable_carousel %}--manual{% endif %} fade-in"
                          data-bgset="{% render 'bgset', image: block.settings.image %}"
                          data-sizes="auto"
                          data-parent-fit="cover"
                          style="background-position: {{ block.settings.alignment }}">
                <noscript>
                  <div class="rimage-wrapper" style="padding-top:{{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100 }}%">
                    <img src="{{ block.settings.image | img_url: '200x200' }}" alt="{{ block.settings.image.alt | escape }}" class="rimage__image">
                  </div>
                </noscript>
              </div>
            {%- endif -%}
  {% endcase %}
{% endfor %}
</div>

{%- style -%}
	{%- assign blocks = section.blocks | where: "type", "head" -%}
	{%- for block in blocks -%}
		.environmenalHead-{{ block.id }} {
            {%- if block.settings.headfontsize != blank -%}
			font-size: {{ block.settings.headfontsize }}px
			{%- endif -%}

			{%- if block.settings.headfontcolor != blank -%}
			color: {{ block.settings.headfontcolor }}
			{%- endif -%}
        }
	{%- endfor -%}
	

{% endstyle %}

