<div id="section-id-{{ section.id }}">
{% for block in section.blocks %}
  {% case block.type %}
      
      {% when 'head' %}
        <div class="environmenalHead-{{ block.id }} rte lightly-spaced-row {% if block.settings.enlarge_text %}large-text{% endif %}" {{ block.shopify_attributes }}>{{ block.settings.headtext }}</div>
	 {% when 'text' %}
           <div class="rte lightly-spaced-row {% if block.settings.enlarge_text %}large-text{% endif %}" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
   	 {% when 'image' %}
            <div class="lightly-spaced-row inline-width-container" style="width: {{ block.settings.image_width }}%" {{ block.shopify_attributes }}>
              {% if block.settings.url != blank %}<a href="{{ block.settings.url }}">{% endif %}
                {% if block.settings.image != blank %}
                  {% render 'responsive-image', image: block.settings.image %}
                {% else %}
                  <div class="placeholder-image">
                    {{- 'image' | placeholder_svg_tag: 'placeholder-svg' -}}
                  </div>
                {% endif %}
              {% if block.settings.url != blank %}</a>{% endif %}
            </div>
  {% endcase %}
{% endfor %}
</div>

{%- style -%}
	{%- assign blocks = section.blocks | where: "type", "head" -%}
	{%- for block in blocks -%}
		.environmenalHead-{{ block.id }} {
            {%- if block.settings.headfontsize != blank -%}
			font-size: {{ block.settings.headfontsize }}px
			{%- endif -%}

			{%- if block.settings.headfontcolor != blank -%}
			color: {{ block.settings.headfontcolor }}
			{%- endif -%}
        }
	{%- endfor -%}
	

{% endstyle %}

{% schema %}
  {
    "name": "enviromental",
      "settings": [
  	
	  {
        "type": "select",
        "id": "height1",
        "label": "Section height",
        "default": "medium",
        "options": [
          {
            "value": "small",
            "label": "Small"
          },
          {
            "value": "medium",
            "label": "Medium"
          },
          {
            "value": "large",
            "label": "Large"
          }
        ]
      },
	 {
        "type": "checkbox",
        "id": "full_width",
        "label": "Wide display",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "use_alt_bg",
        "label": "Use alternate section color",
        "default": false
      },
	{
        "type": "select",
        "id": "text_alignment",
        "label": "Text alignment",
        "default": "center",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ]
      }
	],
	"blocks":[
      {
		"type":"head",
		"name":"head",
		"settings":[
          {
            "type":"text",
            "id":"headtext",
            "label":"Text",
			"default":"Head"
          },
		  {
			"type": "range",
			"id": "headfontsize",
			"label": "Head Font Size",
			"min": 12,
			"max": 24,
			"step": 1,
			"unit": "px",
			"default": 16
		  },
		  {
			"type": "color",
			"id": "headfontcolor",
			"label": "Head Font color"
		  }
		  
		]
      },
	{
        "type": "text",
        "name": "Text",
        "settings": [
          {
            "type": "richtext",
            "id": "text",
            "label": "Text",
            "default": "<p>We designed our collections to represent various environmental areas that need protection.A portion of every purchase is donated to support the following initiatives:</p>"
          },
          {
            "type": "checkbox",
            "id": "enlarge_text",
            "label": "Enlarge text",
            "default": true
          }
        ]
      },
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "range",
            "id": "image_width",
            "label": "Image width",
			"min": 16,
			"max": 100,
			"step": 1,
            "unit": "%",
			"default": 33
          },
          {
            "type": "url",
            "id": "url",
            "label": "Link"
          }
        ]
      }
	],
    "presets": [
      {
        "name": "enviromental",
        "settings": {},
        "blocks": [
          {
            "type": "head"
          },
		  {
		     "type":"text"
		  },
		   {
          "type": "image"
         
        }
        ]
      }
    ]
  }
{% endschema %}

