	{%- assign blocks = section.blocks | where: "type", "head" -%}
	{%- for block in blocks -%}
		.environmenalHead-{{ block.id }} {

            {%- if block.settings.headfontsize != blank -%}
			font-size: {{ block.settings.headfontsize }}px
			{%- endif -%}

			{%- if block.settings.headfontcolor != blank -%}
			color: {{ block.settings.headfontcolor }}
			{%- endif -%}

        color:#5C9757;
        font-size:35px;
        font-weight: bold;
        }
	{%- endfor -%}
	{%- endcomment -%}

{%- assign blocks=section.blocks | where:"type" -%}
{%- for block in blocks -%}
  {%- if block.type =="head" -%}
    .environmenalHead-{{ block.id }} {         
      color:#577C27;
      font-size:45px;
      font-weight: bold;
    }
  {% elsif block.type == "button"%}

    .environmenalBtn-{{ block.type }}{
         width: 35%;
         background-color: #5f7a41 !important;
         border: #5f7a41 !important;
         border-radius: 20px !important;
         font-weight: bold !important;
    }
    .environmenalBtn-{{ block.type }}:hover{
        color: #5f7a41;
        background-color: white !important;
        font-weight: bold;
    }
  {% else %}
    .placeholder-image-text{
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-weight: bold;
        color: white;
        font-size: 24px;
    }

  {%- endif-%}
{%- endfor -%}
