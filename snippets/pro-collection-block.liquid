{% if collection == blank %}

<div class="product-block collection-block">
  <div class="block-inner">
    <div class="product-link">
      <div class="image-cont pro-collection-block-image-cont">
        {% if custom_image and custom_image != blank %}
        	<div class="product-block__image product-block__image--primary product-block__image--active">
            {% render 'responsive-image', image: custom_image, manual_image_load: manual_image_load, aspect_ratio: custom_aspect_ratio, cover: true, no_max_width: true %}
          </div>
        {% else %}
        	{% capture placeholder_svg_name %}collection-{{ forloop.index | modulo: 6 | plus: 1 }}{% endcapture %}
        	<div class="placeholder-image placeholder-image--shape-{{ settings.coll_grid_image_shape }}">{{ placeholder_svg_name | placeholder_svg_tag }}</div>
        {% endif %}
        {% comment %}
        <div class="pro-collection-block__title">{{ 'onboarding.collection.collection_title' | t }}</div>
        {% endcomment %}
      </div>
    </div>
  </div>
</div>

{% else %}

<div class="product-block collection-block" data-collection-id="{{ collection.id }}" {{ custom_attrs }} {% if animate %}data-cc-animate{% endif %}>
  <div class="block-inner">
    <a class="product-link" href="{{ collection.url }}">
      <div class="image-cont pro-collection-block-image-cont">
        {%- liquid
          if custom_image
            assign collection_image = custom_image
          elsif collection.featured_image != blank
            assign collection_image = collection.featured_image
          endif
        -%}

        {% if custom_image != blank %}
          <div class="product-block__image product-block__image--primary product-block__image--active">
            {% render 'responsive-image', image: custom_image, manual_image_load: manual_image_load, aspect_ratio: custom_aspect_ratio, cover: true, no_max_width: true %}
          </div>
        {% else %}
          <div class="placeholder-image placeholder-image--shape-{{ settings.coll_grid_image_shape }}">{{ 'collection-1' | placeholder_svg_tag }}</div>
        {% endif %}
        {% comment %}
        <div class="pro-collection-block__title">{{ collection.title }}</div>
        {% endcomment %}
      </div>
    </a>
  </div>
</div>

{% endif %}